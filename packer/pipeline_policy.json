{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Action": [
                "s3:PutObject",
                "s3:GetObject",
                "s3:GetObjectVersion",
                "s3:GetBucketVersioning",
                "kms:Encrypt",
                "kms:Decrypt",
                "kms:GenerateDataKey"
            ],
            "Resource": [
                "arn:aws:s3:::pipelinecustomamistack-*/*",
                "arn:aws:s3:::pipelinecustomamistack-*"
            ],
            "Effect": "Allow"
        },
        {
            "Action": [
                "iam:PassRole"
            ],
            "Resource": [
                "arn:aws:iam::*:role/PipelineCustomAMIStack-*",
                "arn:aws:iam::*:instance-profile/BatchInstanceProfile"
            ],
            "Effect": "Allow"
        },
        {
            "Action": [
                "cloudformation:DescribeStacks",
                "cloudformation:ListStacks",
                "cloudformation:CreateStack",
                "cloudformation:UpdateStack",
                "cloudformation:DeleteStack",
                "states:CreateStateMachine",
                "states:DescribeActivity",
                "states:DescribeExecution",
                "states:DescribeStateMachine",
                "states:DescribeStateMachineForExecution",
                "states:SendTaskFailure",
                "states:SendTaskHeartbeat",
                "states:SendTaskSuccess",
                "states:StartExecution",
                "sns:Publish"
            ],
            "Resource": [
                "arn:aws:cloudformation:*:*:stack/PipelineCustomAMIStack",
                "arn:aws:cloudformation:*:*:stack/VpcStack",
                "arn:aws:cloudformation:*:*:stack/BatchStack",
                "arn:aws:cloudformation:*:*:stack/TestStack",
                "arn:aws:iam::*:role/PipelineCustomAMIStack-*"
            ],
            "Effect": "Allow"
        },
        {
            "Action": [
                "codecommit:BatchGet*",
                "codecommit:BatchDescribe*",
                "codecommit:Describe*",
                "codecommit:EvaluatePullRequestApprovalRules",
                "codecommit:Get*",
                "codecommit:List*",
                "codecommit:GitPull",
                "codecommit:UploadArchive",
                "codecommit:GetUploadArchiveStatus"
            ],
            "Resource": [
                "arn:aws:codecommit:*:*:pipeline"
            ],
            "Effect": "Allow"
        },
        {
            "Action": [
                "states:*StateMachine",
                "states:DescribeActivity",
                "states:DescribeExecution",
                "states:DescribeStateMachine",
                "states:DescribeStateMachineForExecution",
                "states:SendTaskFailure",
                "states:SendTaskHeartbeat",
                "states:SendTaskSuccess",
                "states:StartExecution",
                "states:TagResource",
                "stepfunctions:DescribeStateMachine"
            ],
            "Resource": [
                "arn:aws:states:*:*:stateMachine:my_state_machine"
            ],
            "Effect": "Allow"
        }
    ]
}